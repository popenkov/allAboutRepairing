section.pop-works
    .pop-works-container
        h2.pop-works-title Popular services
        .pop-works__slider-buttons
                .pop-works__slider-button.pop-works__slider-button-prev
                    +svg('chevron-left', ' pop-works__slider-button-svg')
                .pop-works__slider-button.pop-works__slider-button-next
                    +svg('chevron-right', ' pop-works__slider-button-svg')

        .swiper-container.pop-works__slider-swiper

            .swiper-wrapper
                .swiper-slide
                    .pop-works__item
                        a.pop-works__working-plan(href="#")
                            +svg('plan')
                        a.pop-works__favorites(href="#")
                            +svg('heart-stroke')
